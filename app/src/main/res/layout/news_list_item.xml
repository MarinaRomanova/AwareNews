<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/marginSmall"
    android:background="#f7fbfc"
    android:orientation="vertical"
    android:padding="@dimen/marginSmall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginSmall"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/thumbnail_image_view"
            android:layout_width="@dimen/imageThumbnailSize"
            android:layout_height="@dimen/imageThumbnailSize"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/place_holder"
            android:contentDescription="@string/thumbnail" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/marginSmall">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="20 of the best Nordic summer holidays"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/titleTextsizeLarge" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginSmall"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contributor_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tool:text="By Gemma Bowes"
                    android:textColor="@color/author_date_color" />

                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    tool:text="2018-05-12 06:00"
                    android:textColor="@color/author_date_color" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginSmall"
        android:layout_marginTop="@dimen/marginSmall"
        tool:text="Stylish lakeside cabins, bear-spotting, Viking adventures and midnight sun and fun await in Denmark, Sweden, Norway and Finland"
        android:textColor="@color/colorPrimaryDark" />
</LinearLayout>
